<div id="flash">
  <% flash.each do |type, message| %>
    <% if message.is_a? Array %>
      <% message.each do |msg| %>
        <div class="alert alert-<%= type %>" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= msg %>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-<%= type %>" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
</div>