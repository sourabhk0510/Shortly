<% if !@polls.blank? %>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for poll in @polls %>
    <tr>
      <th><%= poll.id %></th>
      <td><%= poll.title %></td>
      <td><%= poll.description %></td>
      <td>
        <%= link_to 'Edit', edit_poll_path(poll) %>
        <%= link_to 'Delete', poll_path(poll), method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h2>No polls found!</h2>
<%= link_to 'Create a New Poll', new_poll_path %>
<% end %>